<Window
    x:Class="AX2012PerformanceOptimizer.App.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="AX 2012 Performance Optimizer"
    MinWidth="1200"
    MinHeight="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid Grid.Row="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <StackPanel Orientation="Horizontal" Padding="16,0" VerticalAlignment="Center">
                <FontIcon Glyph="&#xE9D9;" FontSize="24" Margin="0,0,12,0" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                <TextBlock Text="AX 2012 Performance Optimizer" 
                          Style="{StaticResource TitleTextBlockStyle}"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <NavigationView Grid.Row="1"
                       x:Name="NavigationViewControl"
                       IsBackButtonVisible="Collapsed"
                       IsSettingsVisible="True"
                       PaneDisplayMode="Left"
                       SelectionChanged="NavigationView_SelectionChanged">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Dashboard" Tag="Dashboard">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE80F;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="SQL Performance" Tag="SqlPerformance">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8B5;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="AOS Monitoring" Tag="AosMonitoring">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE968;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Batch Jobs" Tag="BatchJobs">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE9F3;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Database Health" Tag="DatabaseHealth">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE9F5;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Recommendations" Tag="Recommendations">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEA80;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <Frame x:Name="ContentFrame"/>
        </NavigationView>
    </Grid>
</Window>

