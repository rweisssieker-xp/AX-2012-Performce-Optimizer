<Page
    x:Class="AX2012PerformanceOptimizer.App.Views.SqlPerformanceView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="SQL Performance" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock Text="Monitor and analyze SQL query performance" 
                      Style="{StaticResource BodyTextBlockStyle}" 
                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                      Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Toolbar -->
            <CommandBar Grid.Row="0" DefaultLabelPosition="Right">
                <AppBarButton Icon="Refresh" Label="Refresh" Command="{x:Bind ViewModel.RefreshCommand}"/>
                <AppBarButton Icon="Download" Label="Export" IsEnabled="False"/>
            </CommandBar>

            <!-- Query List -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Queries DataGrid -->
                <ListView Grid.Column="0" 
                         ItemsSource="{x:Bind ViewModel.ExpensiveQueries, Mode=OneWay}"
                         SelectedItem="{x:Bind ViewModel.SelectedQuery, Mode=TwoWay}"
                         Margin="0,0,8,0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                   CornerRadius="4" Padding="12" Margin="0,4">
                                <StackPanel>
                                    <TextBlock Text="{Binding QueryText}" 
                                              TextWrapping="Wrap" 
                                              MaxLines="2"
                                              TextTrimming="CharacterEllipsis"
                                              FontFamily="Consolas"/>
                                    <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,8,0,0">
                                        <TextBlock>
                                            <Run Text="CPU: "/>
                                            <Run Text="{Binding AvgCpuTimeMs}" FontWeight="Bold"/>
                                            <Run Text=" ms"/>
                                        </TextBlock>
                                        <TextBlock>
                                            <Run Text="Executions: "/>
                                            <Run Text="{Binding ExecutionCount}" FontWeight="Bold"/>
                                        </TextBlock>
                                        <TextBlock>
                                            <Run Text="Reads: "/>
                                            <Run Text="{Binding AvgLogicalReads}" FontWeight="Bold"/>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Query Details -->
                <Border Grid.Column="1" 
                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       CornerRadius="8" Padding="16">
                    <ScrollViewer>
                        <StackPanel Spacing="12">
                            <TextBlock Text="Query Details" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            
                            <TextBlock Text="Query Text:" FontWeight="SemiBold"/>
                            <TextBox Text="{x:Bind ViewModel.SelectedQuery.QueryText, Mode=OneWay}" 
                                    IsReadOnly="True" 
                                    TextWrapping="Wrap" 
                                    Height="200"
                                    FontFamily="Consolas"
                                    AcceptsReturn="True"/>

                            <TextBlock Text="Statistics:" FontWeight="SemiBold" Margin="0,12,0,0"/>
                            <StackPanel Spacing="4">
                                <TextBlock>
                                    <Run Text="Execution Count: "/>
                                    <Run Text="{x:Bind ViewModel.SelectedQuery.ExecutionCount, Mode=OneWay}"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Avg CPU Time: "/>
                                    <Run Text="{x:Bind ViewModel.SelectedQuery.AvgCpuTimeMs, Mode=OneWay}"/>
                                    <Run Text=" ms"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Avg Elapsed Time: "/>
                                    <Run Text="{x:Bind ViewModel.SelectedQuery.AvgElapsedTimeMs, Mode=OneWay}"/>
                                    <Run Text=" ms"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>

