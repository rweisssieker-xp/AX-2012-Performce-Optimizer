<Page
    x:Class="AX2012PerformanceOptimizer.App.Views.DatabaseHealthView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Database Health" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock Text="Monitor database size, fragmentation, and missing indexes" 
                      Style="{StaticResource BodyTextBlockStyle}" 
                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                      Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="16">
                <!-- Toolbar -->
                <CommandBar DefaultLabelPosition="Right">
                    <AppBarButton Icon="Refresh" Label="Refresh" Command="{x:Bind ViewModel.RefreshCommand}"/>
                </CommandBar>

                <!-- Database Metrics -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                       CornerRadius="8" Padding="20">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Database Metrics" Style="{StaticResource SubtitleTextBlockStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Total Size (MB)" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.CurrentMetrics.TotalSizeMB, Mode=OneWay}" 
                                          Style="{StaticResource TitleTextBlockStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Data Size (MB)" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.CurrentMetrics.DataSizeMB, Mode=OneWay}" 
                                          Style="{StaticResource TitleTextBlockStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Log Size (MB)" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.CurrentMetrics.LogSizeMB, Mode=OneWay}" 
                                          Style="{StaticResource TitleTextBlockStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Pivot for different views -->
                <Pivot>
                    <!-- Top Tables -->
                    <PivotItem Header="Top Tables">
                        <ListView ItemsSource="{x:Bind ViewModel.TopTables, Mode=OneWay}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" FontWeight="SemiBold">
                                            <Run Text="{Binding SchemaName}"/>
                                            <Run Text="."/>
                                            <Run Text="{Binding TableName}"/>
                                        </TextBlock>
                                        <TextBlock Grid.Column="1">
                                            <Run Text="{Binding RowCount}"/>
                                            <Run Text=" rows"/>
                                        </TextBlock>
                                        <TextBlock Grid.Column="2">
                                            <Run Text="{Binding TotalSpaceKB}"/>
                                            <Run Text=" KB"/>
                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </PivotItem>

                    <!-- Fragmented Indexes -->
                    <PivotItem Header="Fragmented Indexes">
                        <ListView ItemsSource="{x:Bind ViewModel.FragmentedIndexes, Mode=OneWay}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" FontWeight="SemiBold">
                                            <Run Text="{Binding TableName}"/>
                                            <Run Text="."/>
                                            <Run Text="{Binding IndexName}"/>
                                        </TextBlock>
                                        <TextBlock Grid.Column="1" Foreground="Orange">
                                            <Run Text="{Binding FragmentationPercent}"/>
                                            <Run Text="% fragmented"/>
                                        </TextBlock>
                                        <TextBlock Grid.Column="2">
                                            <Run Text="{Binding PageCount}"/>
                                            <Run Text=" pages"/>
                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </PivotItem>

                    <!-- Missing Indexes -->
                    <PivotItem Header="Missing Indexes">
                        <ListView ItemsSource="{x:Bind ViewModel.MissingIndexes, Mode=OneWay}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" 
                                           Padding="12" Margin="0,4" CornerRadius="4">
                                        <StackPanel>
                                            <TextBlock Text="{Binding TableName}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding EqualityColumns}" 
                                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                      Margin="0,4,0,0"/>
                                            <TextBlock Margin="0,4,0,0">
                                                <Run Text="Impact Score: "/>
                                                <Run Text="{Binding ImpactScore}" FontWeight="Bold"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </PivotItem>
                </Pivot>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

