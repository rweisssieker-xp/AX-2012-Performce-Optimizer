<Page
    x:Class="AX2012PerformanceOptimizer.App.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Settings" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock Text="Manage connection profiles and application settings" 
                      Style="{StaticResource BodyTextBlockStyle}" 
                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                      Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Profiles List -->
            <Border Grid.Column="0" 
                   Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                   CornerRadius="8" Padding="16" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="Connection Profiles" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,12"/>
                    
                    <Button Content="New Profile" 
                           Command="{x:Bind ViewModel.NewProfileCommand}"
                           HorizontalAlignment="Stretch"
                           Margin="0,0,0,12">
                        <Button.Icon>
                            <FontIcon Glyph="&#xE710;"/>
                        </Button.Icon>
                    </Button>

                    <ListView ItemsSource="{x:Bind ViewModel.Profiles, Mode=OneWay}"
                             SelectedItem="{x:Bind ViewModel.SelectedProfile, Mode=TwoWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Padding="8">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding SqlServerName}" 
                                              FontSize="12"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- Profile Editor -->
            <Border Grid.Column="1" 
                   Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                   CornerRadius="8" Padding="20">
                <ScrollViewer>
                    <StackPanel Spacing="16">
                        <TextBlock Text="Profile Details" Style="{StaticResource SubtitleTextBlockStyle}"/>

                        <InfoBar IsOpen="True" 
                                Severity="Informational" 
                                Message="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"/>

                        <StackPanel Spacing="8">
                            <TextBlock Text="Profile Name" FontWeight="SemiBold"/>
                            <TextBox Text="{x:Bind ViewModel.SelectedProfile.Name, Mode=TwoWay}" 
                                    PlaceholderText="Enter profile name"/>
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="SQL Server Name" FontWeight="SemiBold"/>
                            <TextBox Text="{x:Bind ViewModel.SelectedProfile.SqlServerName, Mode=TwoWay}" 
                                    PlaceholderText="server\instance"/>
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="Database Name" FontWeight="SemiBold"/>
                            <TextBox Text="{x:Bind ViewModel.SelectedProfile.DatabaseName, Mode=TwoWay}" 
                                    PlaceholderText="AX database name"/>
                        </StackPanel>

                        <CheckBox Content="Use Windows Authentication" 
                                 IsChecked="{x:Bind ViewModel.SelectedProfile.UseWindowsAuthentication, Mode=TwoWay}"/>

                        <StackPanel Spacing="8">
                            <TextBlock Text="Username" FontWeight="SemiBold"/>
                            <TextBox Text="{x:Bind ViewModel.SelectedProfile.Username, Mode=TwoWay}" 
                                    PlaceholderText="SQL username"
                                    IsEnabled="{x:Bind ViewModel.SelectedProfile.UseWindowsAuthentication, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"/>
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="AOS Server Name" FontWeight="SemiBold"/>
                            <TextBox Text="{x:Bind ViewModel.SelectedProfile.AosServerName, Mode=TwoWay}" 
                                    PlaceholderText="AOS server name"/>
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="AOS Port" FontWeight="SemiBold"/>
                            <NumberBox Value="{x:Bind ViewModel.SelectedProfile.AosPort, Mode=TwoWay}" 
                                      SpinButtonPlacementMode="Compact"/>
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="Company" FontWeight="SemiBold"/>
                            <TextBox Text="{x:Bind ViewModel.SelectedProfile.AxCompany, Mode=TwoWay}" 
                                    PlaceholderText="DAT"/>
                        </StackPanel>

                        <CheckBox Content="Set as Default Profile" 
                                 IsChecked="{x:Bind ViewModel.SelectedProfile.IsDefault, Mode=TwoWay}"/>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,16,0,0">
                            <Button Content="Save" 
                                   Command="{x:Bind ViewModel.SaveProfileCommand}"
                                   Style="{StaticResource AccentButtonStyle}">
                                <Button.Icon>
                                    <FontIcon Glyph="&#xE74E;"/>
                                </Button.Icon>
                            </Button>
                            <Button Content="Test Connection" 
                                   Command="{x:Bind ViewModel.TestConnectionCommand}">
                                <Button.Icon>
                                    <FontIcon Glyph="&#xE968;"/>
                                </Button.Icon>
                            </Button>
                            <Button Content="Connect" 
                                   Command="{x:Bind ViewModel.ConnectCommand}">
                                <Button.Icon>
                                    <FontIcon Glyph="&#xE703;"/>
                                </Button.Icon>
                            </Button>
                            <Button Content="Delete" 
                                   Command="{x:Bind ViewModel.DeleteProfileCommand}">
                                <Button.Icon>
                                    <FontIcon Glyph="&#xE74D;"/>
                                </Button.Icon>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>

