<UserControl x:Class="AX2012PerformanceOptimizer.WpfApp.Views.QuickActionsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="300">
    <Border Background="White" 
            BorderBrush="#E0E0E0" 
            BorderThickness="1" 
            CornerRadius="4"
            Padding="15">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="315" ShadowDepth="5" BlurRadius="10" Opacity="0.3"/>
            </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="âš¡ Quick Actions" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          Foreground="#2C3E50"/>
                <TextBlock Text="Press Ctrl+K to open" 
                          FontSize="11" 
                          Foreground="#757575" 
                          Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Actions List -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding QuickActions}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding DisplayText}" 
                                   Command="{Binding Command}"
                                   Style="{StaticResource QuickActionButtonStyle}"
                                   Margin="0,0,0,8"
                                   HorizontalAlignment="Stretch"
                                   HorizontalContentAlignment="Left"
                                   Padding="12,8">
                                <Button.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Description}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding ShortcutText}" FontSize="10" Foreground="#757575" Margin="0,3,0,0"/>
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" 
                   BorderBrush="#E0E0E0" 
                   BorderThickness="0,1,0,0" 
                   Margin="0,15,0,0" 
                   Padding="0,10,0,0">
                <TextBlock Text="ðŸ’¡ Tip: Customize actions in Settings" 
                          FontSize="10" 
                          Foreground="#757575" 
                          HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</UserControl>

