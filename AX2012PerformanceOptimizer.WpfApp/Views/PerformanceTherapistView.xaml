<UserControl x:Class="AX2012PerformanceOptimizer.WpfApp.Views.PerformanceTherapistView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignHeight="900" d:DesignWidth="1600">

    <UserControl.Resources>
        <!-- Message Role to Alignment Converter would go here in production -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Main Chat Area -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#4A148C" Padding="20" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ©º" FontSize="28" Margin="0,0,10,0"/>
                            <TextBlock Text="AI Performance Therapist" FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="Interactive diagnosis through conversation - Your system's personal doctor"
                                  FontSize="13" Foreground="#E1BEE7" Margin="0,5,0,0"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Session: " FontSize="12" Foreground="#CE93D8"/>
                            <TextBlock Text="{Binding SessionTitle}" FontSize="12" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text=" â€¢ Phase: " FontSize="12" Foreground="#CE93D8" Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding CurrentPhase}" FontSize="12" FontWeight="Bold" Foreground="#FFD54F"/>
                            <TextBlock Text=" â€¢ Messages: " FontSize="12" Foreground="#CE93D8" Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding MessageCount}" FontSize="12" FontWeight="Bold" Foreground="White"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="ðŸ†• New Session" Command="{Binding StartSessionCommand}"
                               Background="#7B1FA2" Foreground="White" Padding="12,8" BorderThickness="0" Margin="0,0,5,0"/>
                        <Button Content="ðŸ End Session" Command="{Binding EndSessionCommand}"
                               Background="#C2185B" Foreground="White" Padding="12,8" BorderThickness="0"
                               IsEnabled="{Binding IsSessionActive}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Messages Area -->
            <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
                    <ItemsControl ItemsSource="{Binding Messages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,15">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="HorizontalAlignment" Value="Left"/>
                                            <Setter Property="MaxWidth" Value="600"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Role}" Value="User">
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <StackPanel>
                                        <!-- Message Header -->
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock FontSize="14" FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="ðŸ©º Therapist"/>
                                                        <Setter Property="Foreground" Value="#4A148C"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Role}" Value="User">
                                                                <Setter Property="Text" Value="ðŸ‘¤ You"/>
                                                                <Setter Property="Foreground" Value="#1976D2"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}"
                                                      FontSize="11" Foreground="#999" Margin="8,2,0,0"/>
                                        </StackPanel>

                                        <!-- Message Bubble -->
                                        <Border CornerRadius="8" Padding="15">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#F3E5F5"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Role}" Value="User">
                                                            <Setter Property="Background" Value="#E3F2FD"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>

                                            <TextBlock Text="{Binding Content}" TextWrapping="Wrap" LineHeight="22" FontSize="14"/>
                                        </Border>

                                        <!-- Related Symptoms -->
                                        <ItemsControl ItemsSource="{Binding RelatedSymptoms}" Margin="0,8,0,0">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#FFF3E0" BorderBrush="#FF9800" BorderThickness="1"
                                                           Padding="10" Margin="0,3" CornerRadius="5">
                                                        <StackPanel>
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="âš ï¸" FontSize="14" Margin="0,0,5,0"/>
                                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="12"/>
                                                                <TextBlock Text="{Binding Severity, StringFormat=' ({0})'}"
                                                                          FontSize="11" Foreground="#666" Margin="5,0,0,0"/>
                                                            </StackPanel>
                                                            <TextBlock Text="{Binding Description}" FontSize="11"
                                                                      Foreground="#666" Margin="19,3,0,0" TextWrapping="Wrap"/>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Suggested Questions -->
            <Border Grid.Row="2" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="1,0,1,1" Padding="15"
                   Visibility="{Binding IsSessionActive, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="ðŸ’¡ Suggested Responses:" FontSize="12" FontWeight="Bold" Foreground="#666" Margin="0,0,0,8"/>
                    <ItemsControl ItemsSource="{Binding SuggestedQuestions}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.UseSuggestedQuestionCommand,
                                               RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       CommandParameter="{Binding}"
                                       Background="White" BorderBrush="#9C27B0" BorderThickness="1"
                                       Padding="12,6" Margin="0,0,8,8" Cursor="Hand">
                                    <TextBlock Text="{Binding}" FontSize="12" Foreground="#7B1FA2" TextWrapping="Wrap"/>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Input Area -->
            <Border Grid.Row="3" Background="White" BorderBrush="#E0E0E0" BorderThickness="1,0,1,1" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" Text="{Binding UserInput, UpdateSourceTrigger=PropertyChanged}"
                            FontSize="14" Padding="10" BorderThickness="1" BorderBrush="#E0E0E0"
                            AcceptsReturn="False" TextWrapping="Wrap" MaxHeight="80"
                            VerticalScrollBarVisibility="Auto">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SendMessageCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>

                    <Button Grid.Column="1" Content="ðŸ“¤ Send" Command="{Binding SendMessageCommand}"
                           Background="#7B1FA2" Foreground="White" FontWeight="Bold"
                           Padding="20,10" BorderThickness="0" Margin="10,0,0,0"
                           IsEnabled="{Binding IsSessionActive}"/>
                </Grid>
            </Border>

            <!-- Loading Overlay -->
            <Grid Grid.Row="0" Grid.RowSpan="4" Background="#80FFFFFF"
                 Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Border Background="White" CornerRadius="10" Padding="30" HorizontalAlignment="Center" VerticalAlignment="Center"
                       BorderBrush="#9C27B0" BorderThickness="2">
                    <StackPanel>
                        <TextBlock Text="ðŸ§  AI Thinking..." FontSize="20" FontWeight="Bold" Foreground="#7B1FA2" HorizontalAlignment="Center"/>
                        <TextBlock Text="Analyzing symptoms and generating response..." FontSize="13"
                                  Foreground="#666" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Right Sidebar -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Detected Symptoms -->
            <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,10">
                <StackPanel Margin="15">
                    <TextBlock Text="ðŸ” Detected Symptoms" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding DetectedSymptoms.Count, StringFormat='{}{0} symptoms identified'}"
                              FontSize="12" Foreground="#666" Margin="0,0,0,10"/>

                    <ScrollViewer MaxHeight="250" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding DetectedSymptoms}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10" Margin="0,0,0,8" CornerRadius="5">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#E8F5E9"/>
                                                <Setter Property="BorderBrush" Value="#4CAF50"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Severity}" Value="High">
                                                        <Setter Property="Background" Value="#FFEBEE"/>
                                                        <Setter Property="BorderBrush" Value="#F44336"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Severity}" Value="Critical">
                                                        <Setter Property="Background" Value="#FCE4EC"/>
                                                        <Setter Property="BorderBrush" Value="#C2185B"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Severity}" Value="Medium">
                                                        <Setter Property="Background" Value="#FFF3E0"/>
                                                        <Setter Property="BorderBrush" Value="#FF9800"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="11" TextWrapping="Wrap"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Severity, StringFormat='Severity: {0}'}"
                                                      FontSize="10" Foreground="#666" Margin="0,3,0,0"/>
                                            <TextBlock Text="{Binding Description}" FontSize="10"
                                                      Foreground="#666" Margin="0,3,0,0" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- Diagnosis Result -->
            <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                   Visibility="{Binding ShowDiagnosis, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="ðŸ“‹" FontSize="24" Margin="0,0,8,0"/>
                            <TextBlock Text="Diagnosis Report" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Border Background="#E8EAF6" Padding="12" Margin="0,0,0,12" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Confidence Score" FontSize="11" Foreground="#666"/>
                                <TextBlock Text="{Binding DiagnosisConfidence, StringFormat='{}{0:F0}%'}"
                                          FontSize="24" FontWeight="Bold" Foreground="#3F51B5"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="Summary" FontSize="13" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding DiagnosisSummary}" TextWrapping="Wrap" FontSize="11"
                                  Foreground="#666" Margin="0,0,0,12" LineHeight="18"/>

                        <TextBlock Text="ðŸ” Root Causes" FontSize="13" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ItemsControl ItemsSource="{Binding RootCauses}" Margin="0,0,0,12">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" TextWrapping="Wrap" FontSize="11"
                                              Margin="0,2" Foreground="#666"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="âš¡ Immediate Actions" FontSize="13" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ItemsControl ItemsSource="{Binding ImmediateActions}" Margin="0,0,0,12">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                        <TextBlock Text="â€¢" FontSize="11" Foreground="#666" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding}" TextWrapping="Wrap" FontSize="11" Foreground="#666"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="ðŸ“… Long-term Recommendations" FontSize="13" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ItemsControl ItemsSource="{Binding LongTermRecommendations}" Margin="0,0,0,12">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                        <TextBlock Text="â€¢" FontSize="11" Foreground="#666" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding}" TextWrapping="Wrap" FontSize="11" Foreground="#666"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="ðŸ›¡ï¸ Preventive Measures" FontSize="13" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ItemsControl ItemsSource="{Binding PreventiveMeasures}" Margin="0,0,0,12">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                        <TextBlock Text="â€¢" FontSize="11" Foreground="#666" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding}" TextWrapping="Wrap" FontSize="11" Foreground="#666"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Border Background="#E8F5E9" BorderBrush="#4CAF50" BorderThickness="1" Padding="12" CornerRadius="5" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="ðŸŽ¯ Prognosis" FontSize="13" FontWeight="Bold" Margin="0,0,0,5" Foreground="#2E7D32"/>
                                <TextBlock Text="{Binding DiagnosisPrognosis}" TextWrapping="Wrap"
                                          FontSize="11" LineHeight="18"/>
                            </StackPanel>
                        </Border>

                        <StackPanel Orientation="Horizontal">
                            <Button Content="ðŸ’¾ Export Report" Command="{Binding ExportDiagnosisCommand}"
                                   Background="#1976D2" Foreground="White" Padding="12,6" BorderThickness="0" Margin="0,0,5,0"/>
                            <Button Content="ðŸ—‘ï¸ Clear" Command="{Binding ClearDiagnosisCommand}"
                                   Padding="12,6" Margin="0,0,5,0"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Column="0" Grid.ColumnSpan="3" Background="#F5F5F5" Padding="10"
               VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="0,10,0,-30">
            <TextBlock Text="{Binding StatusMessage}" FontSize="11" Foreground="#666"/>
        </Border>
    </Grid>
</UserControl>
