<UserControl x:Class="AX2012PerformanceOptimizer.WpfApp.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:AX2012PerformanceOptimizer.WpfApp.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Header with Role Selector -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                          Text="System Dashboard" 
                          FontSize="24" 
                          FontWeight="Bold"/>
                
                <!-- Role Selector -->
                <ComboBox Grid.Column="1"
                         ItemsSource="{Binding AvailableRoles}"
                         SelectedItem="{Binding SelectedRole}"
                         MinWidth="200"
                         ToolTip="Select your role to see role-specific metrics">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>
            
            <!-- Role-Specific Widgets (shown when RoleData is loaded and has widgets) -->
            <ItemsControl ItemsSource="{Binding RoleData.Widgets}" 
                         Margin="0,0,0,20"
                         Visibility="{Binding RoleData, Converter={StaticResource NullToVisibilityConverter}}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" 
                               BorderBrush="#E0E0E0" 
                               BorderThickness="1" 
                               CornerRadius="10" 
                               Padding="20" 
                               Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="{Binding Title}" 
                                          FontSize="18" 
                                          FontWeight="Bold" 
                                          Margin="0,0,0,10"/>
                                <TextBlock Text="{Binding Description}" 
                                          Foreground="#757575" 
                                          Margin="0,0,0,10"/>
                                <TextBlock Text="Widget data will be displayed here" 
                                          Foreground="#757575" 
                                          FontStyle="Italic"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Default Dashboard (always visible - shows metrics even when role widgets are loaded) -->
            <StackPanel>
            
            <!-- Prominent Cost Display -->
            <Border Background="#FFF3E0" 
                   BorderBrush="#FF9800" 
                   BorderThickness="3" 
                   CornerRadius="10" 
                   Padding="25" 
                   Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="ðŸ’° Performance Cost Impact" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Foreground="#E65100"/>
                        <TextBlock Text="Current system performance costs" 
                                  FontSize="12" 
                                  Foreground="#757575" 
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Margin="20,0,20,0">
                        <TextBlock Text="Daily" FontSize="11" Foreground="#757575" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding DailyCost, StringFormat='â‚¬{0:F2}'}" 
                                  FontSize="24" 
                                  FontWeight="Bold" 
                                  Foreground="#E65100" 
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" Margin="20,0,20,0">
                        <TextBlock Text="Monthly" FontSize="11" Foreground="#757575" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding MonthlyCost, StringFormat='â‚¬{0:F2}'}" 
                                  FontSize="24" 
                                  FontWeight="Bold" 
                                  Foreground="#E65100" 
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="3">
                        <TextBlock Text="Potential Savings" FontSize="11" Foreground="#757575" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding PotentialSavings, StringFormat='â‚¬{0:F2}/mo'}" 
                                  FontSize="24" 
                                  FontWeight="Bold" 
                                  Foreground="#2E7D32" 
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Status Message -->
            <Border Background="#E8F5E9" 
                   BorderBrush="#4CAF50" 
                   BorderThickness="1" 
                   CornerRadius="5" 
                   Padding="15" 
                   Margin="0,0,0,20">
                <TextBlock Text="{Binding StatusMessage}" 
                          FontWeight="SemiBold"/>
            </Border>

            <!-- Metrics Cards -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Active Users Card -->
                <Border Grid.Column="0" 
                       Background="#E3F2FD" 
                       BorderBrush="#2196F3" 
                       BorderThickness="2" 
                       CornerRadius="10" 
                       Padding="20" 
                       Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ‘¥ Active Users" 
                                  FontSize="14" 
                                  Foreground="#1976D2" 
                                  FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding ActiveUsers}" 
                                  FontSize="36" 
                                  FontWeight="Bold" 
                                  Foreground="#0D47A1" 
                                  Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Running Batch Jobs Card -->
                <Border Grid.Column="1" 
                       Background="#FFF3E0" 
                       BorderBrush="#FF9800" 
                       BorderThickness="2" 
                       CornerRadius="10" 
                       Padding="20" 
                       Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="â±ï¸ Running Jobs" 
                                  FontSize="14" 
                                  Foreground="#F57C00" 
                                  FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding RunningBatchJobs}" 
                                  FontSize="36" 
                                  FontWeight="Bold" 
                                  Foreground="#E65100" 
                                  Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Database Size Card -->
                <Border Grid.Column="2" 
                       Background="#F3E5F5" 
                       BorderBrush="#9C27B0" 
                       BorderThickness="2" 
                       CornerRadius="10" 
                       Padding="20" 
                       Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ’¾ Database (MB)" 
                                  FontSize="14" 
                                  Foreground="#7B1FA2" 
                                  FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding DatabaseSizeMB}" 
                                  FontSize="36" 
                                  FontWeight="Bold" 
                                  Foreground="#4A148C" 
                                  Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Expensive Queries Card -->
                <Border Grid.Column="3" 
                       Background="#FFEBEE" 
                       BorderBrush="#F44336" 
                       BorderThickness="2" 
                       CornerRadius="10" 
                       Padding="20">
                    <StackPanel>
                        <TextBlock Text="âš ï¸ Expensive Queries" 
                                  FontSize="14" 
                                  Foreground="#D32F2F" 
                                  FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding ExpensiveQueries}" 
                                  FontSize="36" 
                                  FontWeight="Bold" 
                                  Foreground="#B71C1C" 
                                  Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Button Content="ðŸ”„ Load Data"
                       Command="{Binding LoadDataCommand}"
                       Width="120"
                       Height="35"
                       Background="#4CAF50"
                       Foreground="White"
                       FontWeight="Bold"
                       BorderThickness="0"
                       Cursor="Hand"/>
                <Button Content="ðŸ”ƒ Refresh"
                       Command="{Binding RefreshCommand}"
                       Width="120"
                       Height="35"
                       Background="#2196F3"
                       Foreground="White"
                       FontWeight="Bold"
                       BorderThickness="0"
                       Cursor="Hand"
                       Margin="10,0,0,0"/>
            </StackPanel>

            <!-- AI Performance Insights Section (Phase 1 Features) -->
            <Border Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="2"
                   CornerRadius="10" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="ðŸ¤– AI Performance Insights (Phase 1)" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="ðŸ“Š Generate Dashboard"
                               Command="{Binding GenerateInsightsDashboardCommand}"
                               Background="#2196F3" Foreground="White" FontWeight="Bold"
                               Height="35" Padding="15,0" BorderThickness="0" Cursor="Hand"
                               ToolTip="Generate AI-powered performance insights dashboard with automatic analysis"/>

                        <Button Content="ðŸ“… Weekly Summary"
                               Command="{Binding ShowWeeklySummaryCommand}"
                               Background="#4CAF50" Foreground="White" FontWeight="Bold"
                               Height="35" Padding="15,0" BorderThickness="0"
                               Cursor="Hand" Margin="10,0,0,0"
                               ToolTip="Get AI-generated weekly performance summary with findings and recommendations"/>

                        <Button Content="ðŸ’¡ Find Opportunities"
                               Command="{Binding ShowOptimizationOpportunitiesCommand}"
                               Background="#FF9800" Foreground="White" FontWeight="Bold"
                               Height="35" Padding="15,0" BorderThickness="0"
                               Cursor="Hand" Margin="10,0,0,0"
                               ToolTip="Discover optimization opportunities with ROI analysis and effort estimates"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Loading Indicator -->
            <Border Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" 
                   Background="#FFF9C4" 
                   BorderBrush="#FBC02D" 
                   BorderThickness="1" 
                   CornerRadius="5" 
                   Padding="15">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="â³" FontSize="20" Margin="0,0,10,0"/>
                    <TextBlock Text="Loading data..." FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>

