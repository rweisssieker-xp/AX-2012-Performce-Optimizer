<UserControl x:Class="AX2012PerformanceOptimizer.WpfApp.Views.QuickFixView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="âš¡ Quick-Fix Mode" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Rapid 30-second optimization suggestions for immediate performance improvements"
                      Foreground="#757575" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="1"
               CornerRadius="5" Padding="15" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <Button Content="ðŸ” Analyze (30s)" 
                       Command="{Binding AnalyzeCommand}"
                       Padding="20,10"
                       FontSize="14"
                       FontWeight="Bold"
                       Margin="0,0,20,0"/>
                
                <ProgressBar Value="{Binding AnalysisProgress}" 
                            Maximum="100"
                            Width="300"
                            Height="20"
                            Margin="0,0,20,0"
                            Visibility="{Binding IsAnalyzing, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                
                <TextBlock Text="{Binding StatusMessage}" 
                          VerticalAlignment="Center"
                          Foreground="#757575" 
                          FontStyle="Italic"
                          Margin="20,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Quick Fixes List -->
        <Grid Grid.Row="2">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding AnalysisResult.QuickFixes}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" BorderBrush="#E0E0E0"
                                   CornerRadius="10" Padding="20" Margin="0,0,0,15"
                                   BorderThickness="2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Header -->
                                    <Grid Grid.Row="0" Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Type}" 
                                                      Foreground="#757575" FontSize="12" Margin="0,5,0,0"/>
                                        </StackPanel>
                                        
                                        <Border Grid.Column="1" 
                                               Background="#FF9800"
                                               CornerRadius="5" Padding="10,5">
                                            <TextBlock Text="{Binding Priority}" 
                                                      Foreground="White" 
                                                      FontWeight="Bold"
                                                      FontSize="11"/>
                                        </Border>
                                    </Grid>

                                    <!-- Description -->
                                    <TextBlock Grid.Row="1" Text="{Binding Description}" 
                                              TextWrapping="Wrap"
                                              Margin="0,0,0,15"/>

                                    <!-- Metrics and Actions -->
                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                            <TextBlock Text="Impact" FontSize="11" Foreground="#757575"/>
                                            <TextBlock Text="{Binding Impact, StringFormat='{}{0:F0}%'}" 
                                                      FontSize="18" FontWeight="Bold" Foreground="#4CAF50"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                            <TextBlock Text="Effort" FontSize="11" Foreground="#757575"/>
                                            <TextBlock Text="{Binding Effort, StringFormat='{}{0:F0}%'}" 
                                                      FontSize="18" FontWeight="Bold"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="2" Margin="0,0,10,0">
                                            <TextBlock Text="Confidence" FontSize="11" Foreground="#757575"/>
                                            <TextBlock Text="{Binding Confidence, StringFormat='{}{0:F0}%'}" 
                                                      FontSize="18" FontWeight="Bold"/>
                                        </StackPanel>
                                        
                                        <Button Grid.Column="3" 
                                               Content="âœ… Apply" 
                                               Command="{Binding DataContext.ApplyFixCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                               CommandParameter="{Binding Id}"
                                               Padding="15,8"
                                               Background="#4CAF50"
                                               Foreground="White"
                                               FontWeight="Bold"
                                               Cursor="Hand">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="#4CAF50"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#45A049"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Empty State -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                       Visibility="{Binding AnalysisResult, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="ðŸ“Š" FontSize="64" HorizontalAlignment="Center"/>
                <TextBlock Text="Click 'Analyze' to find quick fixes" 
                          FontSize="16" 
                          Foreground="#757575"
                          HorizontalAlignment="Center"
                          Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
