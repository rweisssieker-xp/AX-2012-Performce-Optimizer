<UserControl x:Class="AX2012PerformanceOptimizer.WpfApp.Views.ChainReactionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1400">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ”— Performance Chain Reaction" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Predict cascade impact of optimizing queries on dependent queries"
                      Foreground="#757575" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="1"
               CornerRadius="5" Padding="15" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Query:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox Grid.Column="1" x:Name="QuerySelector" 
                         ItemsSource="{Binding AvailableQueries}"
                         DisplayMemberPath="QueryHash"
                         SelectedValuePath="QueryHash"
                         SelectedValue="{Binding SelectedQueryHash}"
                         Margin="0,0,20,0"
                         MinWidth="300"/>
                
                <TextBlock Grid.Column="2" Text="Optimization:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox Grid.Column="3" 
                         ItemsSource="{Binding OptimizationTypes}"
                         SelectedItem="{Binding OptimizationType}"
                         MinWidth="150"
                         Margin="0,0,20,0"/>
                
                <Button Grid.Column="4" Content="ðŸ” Predict Impact" 
                       Command="{Binding PredictImpactCommand}"
                       Padding="15,8" Margin="0,0,10,0"/>
                
                <Button Grid.Column="5" Content="ðŸ”„ Load Graph" 
                       Command="{Binding LoadGraphCommand}"
                       Padding="15,8"/>
                
                <TextBlock Grid.Column="6" Text="{Binding StatusMessage}" 
                          VerticalAlignment="Center" Margin="20,0,0,0"
                          Foreground="#757575" FontStyle="Italic"/>
            </Grid>
        </Border>

        <!-- Main Content: Graph and Impact Panel -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Graph Visualization Area -->
            <Border Grid.Column="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                   CornerRadius="5" Padding="10" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Dependency Graph" FontWeight="Bold" Margin="0,0,0,10"/>
                    
                    <!-- Placeholder for graph visualization -->
                    <Border Grid.Row="1" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="1"
                           CornerRadius="5">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ“Š" FontSize="48" HorizontalAlignment="Center"/>
                            <TextBlock Text="Graph visualization will be rendered here" 
                                      Foreground="#757575" 
                                      HorizontalAlignment="Center"
                                      Margin="0,10,0,0"/>
                            <TextBlock Text="Click 'Load Graph' to build dependency graph" 
                                      Foreground="#757575" 
                                      FontSize="11"
                                      HorizontalAlignment="Center"
                                      Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding Graph.Summary, FallbackValue='No graph loaded'}" 
                                      Foreground="#757575" 
                                      FontSize="11"
                                      HorizontalAlignment="Center"
                                      Margin="0,10,0,0"
                                      TextWrapping="Wrap"
                                      MaxWidth="400"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Separator -->
            <Separator Grid.Column="1" Orientation="Vertical"/>

            <!-- Impact Details Panel -->
            <Border Grid.Column="2" Background="#FFF3E0" BorderBrush="#FF9800" BorderThickness="2"
                   CornerRadius="5" Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="âš¡ Cascade Impact Prediction" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <!-- Impact Summary -->
                        <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                               CornerRadius="5" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Summary" FontWeight="Bold" Margin="0,0,0,10"/>
                                <TextBlock Text="{Binding ImpactResult.Summary, FallbackValue='Select a query and predict impact'}"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <!-- Impact Metrics -->
                        <Grid Margin="0,0,0,15" Visibility="{Binding ImpactResult, Converter={x:Static BooleanToVisibilityConverter.Default}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Queries Affected" FontSize="11" Foreground="#757575"/>
                                <TextBlock Text="{Binding ImpactResult.QueriesAffected}" 
                                          FontSize="24" FontWeight="Bold"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Total Time Saved" FontSize="11" Foreground="#757575"/>
                                <TextBlock Text="{Binding ImpactResult.TotalTimeSaved, StringFormat='{}{0:F0} ms'}" 
                                          FontSize="24" FontWeight="Bold" Foreground="#4CAF50"/>
                            </StackPanel>
                        </Grid>

                        <!-- Confidence -->
                        <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                               CornerRadius="5" Padding="15" Margin="0,0,0,15"
                               Visibility="{Binding ImpactResult, Converter={x:Static BooleanToVisibilityConverter.Default}}">
                            <StackPanel>
                                <TextBlock Text="Confidence" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding ImpactResult.Confidence, StringFormat='{}{0:F1}%'}" 
                                          FontSize="16"/>
                                <TextBlock Text="{Binding ImpactResult.Confidence, Converter={StaticResource ConfidenceLevelConverter}}" 
                                          Foreground="#757575" FontSize="11"/>
                            </StackPanel>
                        </Border>

                        <!-- Affected Queries List -->
                        <TextBlock Text="Affected Queries" FontWeight="Bold" Margin="0,0,0,10"
                                  Visibility="{Binding ImpactResult, Converter={x:Static BooleanToVisibilityConverter.Default}}"/>
                        <ItemsControl ItemsSource="{Binding ImpactResult.AffectedQueries}"
                                     Visibility="{Binding ImpactResult, Converter={x:Static BooleanToVisibilityConverter.Default}}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                                           CornerRadius="5" Padding="10" Margin="0,0,0,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding QueryHash, StringFormat='Query: {0}'}" 
                                                          FontWeight="Bold" FontSize="11"/>
                                                <TextBlock Text="{Binding Description}" 
                                                          Foreground="#757575" FontSize="10"
                                                          TextWrapping="Wrap" Margin="0,5,0,0"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding ImpactType, Converter={StaticResource ImpactTypeConverter}}" 
                                                          FontWeight="Bold"
                                                          Foreground="{Binding ImpactType, Converter={StaticResource ImpactTypeColorConverter}}"/>
                                                <TextBlock Text="{Binding ImprovementPercentage, StringFormat='{}{0:F1}%'}" 
                                                          FontSize="12" Margin="0,5,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
