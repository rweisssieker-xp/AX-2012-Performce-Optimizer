<UserControl x:Class="AX2012PerformanceOptimizer.WpfApp.Views.DatabaseHealthView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="Database Health Monitor" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Button Content="ðŸ”„ Refresh" Command="{Binding RefreshCommand}" 
                       Background="#2196F3" Foreground="White" FontWeight="Bold" 
                       Width="120" Height="35" BorderThickness="0" Cursor="Hand"/>
            </StackPanel>

            <!-- Database Metrics -->
            <Border Background="#F3E5F5" BorderBrush="#9C27B0" BorderThickness="2" 
                   CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Total Size (MB)" FontSize="14" Foreground="#7B1FA2"/>
                        <TextBlock Text="{Binding CurrentMetrics.TotalSizeMB}" 
                                  FontSize="32" FontWeight="Bold" Foreground="#4A148C" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Data Size (MB)" FontSize="14" Foreground="#7B1FA2"/>
                        <TextBlock Text="{Binding CurrentMetrics.DataSizeMB}" 
                                  FontSize="32" FontWeight="Bold" Foreground="#4A148C" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Log Size (MB)" FontSize="14" Foreground="#7B1FA2"/>
                        <TextBlock Text="{Binding CurrentMetrics.LogSizeMB}" 
                                  FontSize="32" FontWeight="Bold" Foreground="#4A148C" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Tabs for different views -->
            <TabControl>
                <!-- Top Tables -->
                <TabItem Header="ðŸ“Š Top Tables">
                    <ListBox ItemsSource="{Binding TopTables}" Margin="10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="300"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" FontWeight="Bold">
                                        <Run Text="{Binding SchemaName}"/>
                                        <Run Text="."/>
                                        <Run Text="{Binding TableName}"/>
                                    </TextBlock>
                                    <TextBlock Grid.Column="1">
                                        <Run Text="{Binding RowCount}"/>
                                        <Run Text=" rows"/>
                                    </TextBlock>
                                    <TextBlock Grid.Column="2">
                                        <Run Text="{Binding TotalSpaceKB, StringFormat='{}{0:N0} KB'}"/>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>

                <!-- Fragmented Indexes -->
                <TabItem Header="ðŸ”§ Fragmented Indexes">
                    <ListBox ItemsSource="{Binding FragmentedIndexes}" Margin="10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FFF3E0" Padding="10" Margin="0,5" CornerRadius="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="300"/>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" FontWeight="Bold">
                                            <Run Text="{Binding TableName}"/>
                                            <Run Text="."/>
                                            <Run Text="{Binding IndexName}"/>
                                        </TextBlock>
                                        <TextBlock Grid.Column="1" Foreground="#F57C00" FontWeight="Bold">
                                            <Run Text="{Binding FragmentationPercent, StringFormat='{}{0:F2}%'}"/>
                                            <Run Text=" fragmented"/>
                                        </TextBlock>
                                        <TextBlock Grid.Column="2">
                                            <Run Text="{Binding PageCount}"/>
                                            <Run Text=" pages"/>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>

                <!-- Missing Indexes -->
                <TabItem Header="âž• Missing Indexes">
                    <ListBox ItemsSource="{Binding MissingIndexes}" Margin="10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#E8F5E9" Padding="15" Margin="0,5" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding TableName}" FontWeight="Bold" FontSize="14"/>
                                        <TextBlock Text="{Binding EqualityColumns}" 
                                                  Foreground="#2E7D32" Margin="0,5,0,0"/>
                                        <TextBlock Margin="0,5,0,0">
                                            <Run Text="ðŸ’¥ Impact Score: "/>
                                            <Run Text="{Binding ImpactScore, StringFormat='{}{0:N0}'}" FontWeight="Bold"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>
            </TabControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>


