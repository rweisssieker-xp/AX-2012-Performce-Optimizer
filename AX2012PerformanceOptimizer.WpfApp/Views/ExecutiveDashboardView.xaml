<UserControl x:Class="AX2012PerformanceOptimizer.WpfApp.Views.ExecutiveDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignHeight="900" d:DesignWidth="1600">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ“Š AI Executive Dashboard Generator" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="One-click boardroom-ready performance dashboards for different stakeholders"
                      FontSize="14" Foreground="Gray" Margin="0,5,0,0"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Configuration -->
                <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="20" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Stakeholder:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                        <ComboBox Grid.Column="1" ItemsSource="{Binding AvailableStakeholders}"
                                 SelectedItem="{Binding SelectedStakeholderType}" Height="30"/>

                        <TextBlock Grid.Column="2" Text="Time Range:" VerticalAlignment="Center" Margin="20,0,10,0" FontWeight="Bold"/>
                        <TextBox Grid.Column="3" Text="{Binding TimeRangeDays}" Height="30" VerticalContentAlignment="Center"/>

                        <Button Grid.Column="5" Content="ðŸŽ¯ Generate Dashboard" Command="{Binding GenerateDashboardCommand}"
                               Background="#4CAF50" Foreground="White" FontWeight="Bold" Padding="20,8" BorderThickness="0"/>
                    </Grid>
                </Border>

                <!-- Dashboard Content -->
                <StackPanel Visibility="{Binding HasDashboard, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <!-- Health Score -->
                    <Border Background="#E8EAF6" BorderBrush="#3F51B5" BorderThickness="2" Padding="20" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="ðŸ¥" FontSize="48" Margin="0,0,20,0" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding DashboardTitle}" FontSize="20" FontWeight="Bold"/>
                                <TextBlock Text="{Binding DashboardSubtitle}" FontSize="12" Foreground="#666" Margin="0,5,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                <TextBlock Text="Overall Health" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding OverallHealthScore, StringFormat='{}{0:F0}/100'}"
                                          FontSize="32" FontWeight="Bold" Foreground="#3F51B5" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding HealthTrend}" FontSize="14" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Executive Summary -->
                    <Border Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="1" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="ðŸ“‹ Executive Summary" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding ExecutiveSummary}" TextWrapping="Wrap" LineHeight="22"/>
                        </StackPanel>
                    </Border>

                    <!-- Widgets Grid -->
                    <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="ðŸ“Š Key Performance Indicators" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                            <ItemsControl ItemsSource="{Binding Widgets}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="3" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" BorderThickness="1" Margin="5" Padding="15"
                                               CornerRadius="5">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Critical">
                                                            <Setter Property="BorderBrush" Value="#F44336"/>
                                                            <Setter Property="Background" Value="#FFEBEE"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Warning">
                                                            <Setter Property="BorderBrush" Value="#FF9800"/>
                                                            <Setter Property="Background" Value="#FFF3E0"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>

                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                    <TextBlock Text="{Binding Icon}" FontSize="20" Margin="0,0,8,0"/>
                                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="13" TextWrapping="Wrap"/>
                                                </StackPanel>

                                                <TextBlock Text="{Binding Description}" FontSize="10" Foreground="#666" Margin="0,0,0,10" TextWrapping="Wrap"/>

                                                <TextBlock Text="{Binding PrimaryValue}" FontSize="28" FontWeight="Bold" Margin="0,5">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="{Binding ColorCode}"/>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>

                                                <TextBlock Text="{Binding SecondaryValue}" FontSize="11" Foreground="#666"/>

                                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0" Visibility="{Binding TrendDirection, Converter={StaticResource IntToVisibilityConverter}}">
                                                    <TextBlock FontSize="14">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Text" Value="â†’"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding TrendDirection}" Value="1">
                                                                        <Setter Property="Text" Value="â†‘"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding TrendDirection}" Value="-1">
                                                                        <Setter Property="Text" Value="â†“"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding TrendPercentage, StringFormat='{}{0:F1}%'}" FontSize="11" Margin="3,0,0,0">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="#666"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsTrendPositive}" Value="True">
                                                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Key Insights & Actions -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Key Insights -->
                        <Border Grid.Column="0" Background="#E8F5E9" BorderBrush="#4CAF50" BorderThickness="1" Padding="15" Margin="0,0,7.5,0">
                            <StackPanel>
                                <TextBlock Text="ðŸ’¡ Key Insights" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                                <ItemsControl ItemsSource="{Binding KeyInsights}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" TextWrapping="Wrap" Margin="0,3" FontSize="12"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <!-- Action Items -->
                        <Border Grid.Column="1" Background="#FFF3E0" BorderBrush="#FF9800" BorderThickness="1" Padding="15" Margin="7.5,0,0,0">
                            <StackPanel>
                                <TextBlock Text="ðŸŽ¯ Action Items" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                                <ItemsControl ItemsSource="{Binding ActionItems}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" TextWrapping="Wrap" Margin="0,3" FontSize="12"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Actions -->
                    <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="15">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="ðŸ’¾ Export Dashboard" Command="{Binding ExportDashboardCommand}"
                                   Background="#2196F3" Foreground="White" Padding="15,8" BorderThickness="0" Margin="0,0,10,0"/>
                            <Button Content="ðŸ—‘ï¸ Clear" Command="{Binding ClearCommand}"
                                   Padding="15,8" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" Margin="15,0,0,0" FontStyle="Italic" Foreground="#666"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Grid Grid.Row="0" Grid.RowSpan="2" Background="#80000000"
             Visibility="{Binding IsGenerating, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="White" CornerRadius="10" Padding="30" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="ðŸ¤– AI Generating Dashboard..." FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="Analyzing system metrics..." FontSize="14" Foreground="Gray" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
