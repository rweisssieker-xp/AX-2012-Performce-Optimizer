<UserControl x:Class="AX2012PerformanceOptimizer.WpfApp.Views.NaturalLanguageToSqlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1400">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ’¬ Natural Language to SQL Generator" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Describe what you want to query in plain English, and AI will generate the SQL for you"
                      FontSize="14" Foreground="Gray" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Input & Output -->
            <Grid Grid.Column="0" Margin="0,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Input Section -->
                <TextBlock Grid.Row="0" Text="What do you want to query?" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0" Text="{Binding NaturalLanguageInput, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="Wrap" AcceptsReturn="True"
                            BorderBrush="#2196F3" BorderThickness="2"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
                        <CheckBox Content="Read-Only Mode (SELECT only)" IsChecked="{Binding ReadOnlyMode}"
                                 VerticalAlignment="Center" Margin="0,0,20,0"/>
                        <TextBlock Text="Data Area ID:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox Text="{Binding DataAreaId}" Width="80" VerticalAlignment="Center"/>
                        <Button Content="ðŸ”„ Generate SQL" Command="{Binding GenerateSqlCommand}"
                               Background="#4CAF50" Foreground="White" FontWeight="Bold"
                               Width="140" Height="35" Margin="20,0,0,0" BorderThickness="0"/>
                        <Button Content="ðŸ—‘ï¸ Clear" Command="{Binding ClearCommand}"
                               Width="80" Height="35" Margin="10,0,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- Generated SQL Section -->
                <TextBlock Grid.Row="2" Text="Generated SQL Query" FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>
                <Grid Grid.Row="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#CCCCCC" BorderThickness="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBox Text="{Binding GeneratedSql}" TextWrapping="Wrap" AcceptsReturn="True"
                                    FontFamily="Consolas" FontSize="12" Background="Transparent" BorderThickness="0"
                                    IsReadOnly="False" Margin="5"/>
                        </ScrollViewer>
                    </Border>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="âœ… Validate" Command="{Binding ValidateSqlCommand}"
                               Width="100" Height="30" Margin="0,0,10,0"/>
                        <Button Content="ðŸ“‹ Copy" Command="{Binding CopyToClipboardCommand}"
                               Width="100" Height="30" Margin="0,0,10,0"/>
                        <Button Content="ðŸ’¾ Save" Command="{Binding SaveQueryCommand}"
                               Width="100" Height="30" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center"
                                  Margin="20,0,0,0" FontStyle="Italic" Foreground="#666"/>
                    </StackPanel>
                </Grid>

                <!-- Result Details -->
                <Border Grid.Row="4" Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="1"
                       Padding="15" Margin="0,10,0,0" Visibility="{Binding HasResult, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Explanation:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding Explanation}" TextWrapping="Wrap" Margin="0,0,10,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Confidence: " FontWeight="Bold"/>
                                <TextBlock Text="{Binding ConfidenceScore, StringFormat='{}{0:F0}%'}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Safe to Execute: " FontWeight="Bold"/>
                                <TextBlock Text="{Binding IsSafeToExecute}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#F44336"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSafeToExecute}" Value="True">
                                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Generated in: " FontWeight="Bold"/>
                                <TextBlock Text="{Binding GenerationTimeMs, StringFormat='{}{0:F0}ms'}"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Right: Examples & Info -->
            <StackPanel Grid.Column="1">
                <!-- Examples -->
                <Border Background="#FFF3E0" BorderBrush="#FF9800" BorderThickness="2" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="ðŸ’¡ Example Queries" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        <ListBox ItemsSource="{Binding ExampleQueries}" MaxHeight="250"
                                BorderThickness="0" Background="Transparent">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding}" Command="{Binding DataContext.UseExampleCommand,
                                           RelativeSource={RelativeSource AncestorType=UserControl}}"
                                           CommandParameter="{Binding}"
                                           HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                                           Background="Transparent" BorderThickness="0" Cursor="Hand"
                                           Padding="5" Margin="0,2"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>

                <!-- Warnings -->
                <Border Background="#FFF3E0" BorderBrush="#FF9800" BorderThickness="2" Padding="15" Margin="0,0,0,15"
                       Visibility="{Binding Warnings.Count, Converter={StaticResource CountToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="âš ï¸ Warnings" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        <ListBox ItemsSource="{Binding Warnings}" MaxHeight="150"
                                BorderThickness="0" Background="Transparent"/>
                    </StackPanel>
                </Border>

                <!-- Suggestions -->
                <Border Background="#E8F5E9" BorderBrush="#4CAF50" BorderThickness="2" Padding="15" Margin="0,0,0,15"
                       Visibility="{Binding Suggestions.Count, Converter={StaticResource CountToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="ðŸ’¡ Optimization Suggestions" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        <ListBox ItemsSource="{Binding Suggestions}" MaxHeight="150"
                                BorderThickness="0" Background="Transparent"/>
                    </StackPanel>
                </Border>

                <!-- Alternative Queries -->
                <Border Background="#E1F5FE" BorderBrush="#03A9F4" BorderThickness="2" Padding="15"
                       Visibility="{Binding AlternativeQueries.Count, Converter={StaticResource CountToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="ðŸ”„ Alternative Queries" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        <ListBox ItemsSource="{Binding AlternativeQueries}" MaxHeight="150"
                                BorderThickness="0" Background="Transparent">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding}" Command="{Binding DataContext.UseAlternativeCommand,
                                           RelativeSource={RelativeSource AncestorType=UserControl}}"
                                           CommandParameter="{Binding}"
                                           HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                                           Background="Transparent" BorderThickness="0" Cursor="Hand"
                                           FontFamily="Consolas" FontSize="10" Padding="5" Margin="0,2"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Loading Overlay -->
        <Grid Grid.Row="0" Grid.RowSpan="3" Background="#80000000"
             Visibility="{Binding IsGenerating, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="White" CornerRadius="10" Padding="30" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="ðŸ¤– AI is generating SQL..." FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="Please wait..." FontSize="14" Foreground="Gray" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
