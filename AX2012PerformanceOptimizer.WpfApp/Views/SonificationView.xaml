<UserControl x:Class="AX2012PerformanceOptimizer.WpfApp.Views.SonificationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Header -->
            <TextBlock Text="ðŸ”Š Performance Sonification" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Margin="0,0,0,20"/>
            
            <!-- Enable/Disable Toggle -->
            <Border Background="#E3F2FD" 
                   BorderBrush="#2196F3" 
                   BorderThickness="2" 
                   CornerRadius="10" 
                   Padding="20" 
                   Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Enable Sonification" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="Convert performance metrics to audio feedback" 
                                  Foreground="#757575" 
                                  FontSize="12"/>
                    </StackPanel>
                    
                    <ToggleButton Grid.Column="1"
                                 IsChecked="{Binding IsEnabled}"
                                 Width="60"
                                 Height="30"
                                 Background="#4CAF50"
                                 Foreground="White"
                                 FontWeight="Bold"
                                 BorderThickness="0"
                                 Cursor="Hand">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="Background" Value="#4CAF50"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter Property="Background" Value="#4CAF50"/>
                                    </Trigger>
                                    <Trigger Property="IsChecked" Value="False">
                                        <Setter Property="Background" Value="#9E9E9E"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>
                </Grid>
            </Border>

            <!-- Status -->
            <Border Background="#E8F5E9" 
                   BorderBrush="#4CAF50" 
                   BorderThickness="1" 
                   CornerRadius="5" 
                   Padding="15" 
                   Margin="0,0,0,20">
                <TextBlock Text="{Binding StatusMessage}" 
                          FontWeight="SemiBold"/>
            </Border>

            <!-- Volume Control -->
            <Border Background="White" 
                   BorderBrush="#E0E0E0" 
                   BorderThickness="1" 
                   CornerRadius="10" 
                   Padding="20" 
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Volume" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Margin="0,0,0,10"/>
                    <Slider Minimum="0" 
                           Maximum="100" 
                           Value="{Binding Volume}"
                           TickFrequency="10"
                           IsSnapToTickEnabled="True"
                           Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding Volume, StringFormat='{}{0}%'}" 
                              HorizontalAlignment="Center" 
                              FontSize="14" 
                              FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- Pitch Range -->
            <Border Background="White" 
                   BorderBrush="#E0E0E0" 
                   BorderThickness="1" 
                   CornerRadius="10" 
                   Padding="20" 
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Pitch Range" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Min Pitch (Hz)" 
                                      FontSize="12" 
                                      Foreground="#757575" 
                                      Margin="0,0,0,5"/>
                            <TextBox Text="{Binding MinPitchHz, UpdateSourceTrigger=PropertyChanged}" 
                                   FontSize="14"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Max Pitch (Hz)" 
                                      FontSize="12" 
                                      Foreground="#757575" 
                                      Margin="0,0,0,5"/>
                            <TextBox Text="{Binding MaxPitchHz, UpdateSourceTrigger=PropertyChanged}" 
                                   FontSize="14"/>
                        </StackPanel>
                    </Grid>
                    
                    <TextBlock Text="Higher pitch = faster queries, Lower pitch = slower queries" 
                              FontSize="11" 
                              Foreground="#757575" 
                              FontStyle="Italic" 
                              Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Alert Settings -->
            <Border Background="White" 
                   BorderBrush="#E0E0E0" 
                   BorderThickness="1" 
                   CornerRadius="10" 
                   Padding="20" 
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Alert Settings" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Margin="0,0,0,15"/>
                    
                    <CheckBox Content="Enable Alerts" 
                             IsChecked="{Binding EnableAlerts}" 
                             Margin="0,0,0,15"/>
                    
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                  Text="Slow Query Threshold (ms)" 
                                  VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1"
                               Text="{Binding SlowQueryThresholdMs, UpdateSourceTrigger=PropertyChanged}" 
                               Width="100"/>
                    </Grid>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                  Text="High CPU Threshold (%)" 
                                  VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1"
                               Text="{Binding HighCpuThresholdPercent, UpdateSourceTrigger=PropertyChanged}" 
                               Width="100"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Test Sound Button -->
            <Button Content="ðŸ”Š Test Sound"
                   Command="{Binding TestSoundCommand}"
                   Width="150"
                   Height="40"
                   Background="#2196F3"
                   Foreground="White"
                   FontWeight="Bold"
                   BorderThickness="0"
                   Cursor="Hand"
                   Margin="0,0,0,20"/>

            <!-- Monitoring Controls -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Button Content="â–¶ Start Monitoring"
                       Command="{Binding StartMonitoringCommand}"
                       Width="150"
                       Height="35"
                       Background="#4CAF50"
                       Foreground="White"
                       FontWeight="Bold"
                       BorderThickness="0"
                       Cursor="Hand"
                       Visibility="{Binding IsMonitoring, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}"/>
                <Button Content="â¹ Stop Monitoring"
                       Command="{Binding StopMonitoringCommand}"
                       Width="150"
                       Height="35"
                       Background="#F44336"
                       Foreground="White"
                       FontWeight="Bold"
                       BorderThickness="0"
                       Cursor="Hand"
                       Margin="10,0,0,0"
                       Visibility="{Binding IsMonitoring, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StackPanel>

            <!-- Info -->
            <Border Background="#FFF3E0" 
                   BorderBrush="#FF9800" 
                   BorderThickness="1" 
                   CornerRadius="5" 
                   Padding="15" 
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="â„¹ï¸ How it works:" 
                              FontWeight="Bold" 
                              Margin="0,0,0,5"/>
                    <TextBlock Text="â€¢ Fast queries produce high-pitched sounds" 
                              Margin="0,2,0,0"/>
                    <TextBlock Text="â€¢ Slow queries produce low-pitched sounds" 
                              Margin="0,2,0,0"/>
                    <TextBlock Text="â€¢ Alerts play when thresholds are exceeded" 
                              Margin="0,2,0,0"/>
                    <TextBlock Text="â€¢ Audio updates in real-time as metrics change" 
                              Margin="0,2,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
